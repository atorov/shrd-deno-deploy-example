{
    "tasks": {
        "dev": "deno run --allow-env --allow-net --watch src/main.ts",
        "start": "deno run --allow-env --allow-net src/main.ts"
    },
    "compilerOptions": {
        "strict": true,
        "noUncheckedIndexedAccess": true
    },
    "fmt": {
        "options": {
            "indentWidth": 4
        }
    },
    "lint": {
        "rules": {
            "tags": ["recommended"]
        }
    },
    "lock": true
}
